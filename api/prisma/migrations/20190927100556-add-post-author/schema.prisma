datasource sqlite {
  url = "file:dev.db"
  provider = "sqlite"
}

generator photonjs {
  provider = "photonjs"
  output = "../generated/photon"
}

// Define your own models here and run yarn db:save to create
// migrations for them.

model Post {
  id Int @id
  title String
  slug String
  author String
  body String
  image String?
  tags Tag[]
  postedAt DateTime @default(now())
}

model Tag {
  id Int @id
  name String
  posts Post[]
}

model User {
  id Int @id
  name String?
  email String @unique
  isAdmin Boolean @default(false)
}
