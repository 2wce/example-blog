datasource hammerDatasource {
  provider = "sqlite"
  url = "***"
}

generator photonjs {
  provider = "photonjs"
}

// Define your own models here and run yarn db:save to create
// migrations for them.

model Post {
  id Int @id @default(autoincrement())
  title String
  body String
  createdAt DateTime @default(now())
}

model Tag {
  id Int @id @default(autoincrement())
  name String @unique
  posts Post[]
}

model User {
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  isAdmin Boolean @default(false)
}
